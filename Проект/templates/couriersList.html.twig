<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Грузинская кухня</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="base/css/style.css">
    <link rel="stylesheet" href="plugins/css/bootstrap.css">
    <link rel="stylesheet" href="plugins/css/bootstrap.min.css">
    <link rel="stylesheet" href="plugins/css/bootstrap-grid.css">
    <link rel="stylesheet" href="plugins/css/bootstrap-grid.min.css">
    <link rel="stylesheet" href="plugins/css/bootstrap-reboot.css">
    <link rel="stylesheet" href="plugins/css/bootstrap-reboot.min.css">
</head>
<body>
<header id="Cap">
    <div class="container-fluid cap">
        <div class="row">
            <div class="col-lg-12 menu">
                <div class="menu_list">
                    <ul class="menu_list-ul" >
                        <li class="accountInfo">
                        </li>
                        <li>
                            <div class="main-logo" style="margin-left:-120px;">
                                <a href="\">
                                    <img src="base/img/satsivi-iz-kuritsy-gruzinskaya-kuhnya.png" alt="">
                                </a>
                            </div>
                        </li>
                        <li>
                            <ul class="menu-last">
                                <li class="exitButton">
                                    <a href="authorization">Выход</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</header>
<section id="CouriersList">
    <div class="container">
        <div class="row courierList">
            <div class="col-lg-12 food">
                <div class="foodList">
                    <div class="foodListContainer">
                        <p>№</p>
                    </div>
                    <div class="foodListContainer">
                        <p>Логин</p>
                    </div>
                    <div class="foodListContainer">
                        <p>Пароль</p>
                    </div>
                    <div class="foodListContainer">
                        <p>ФИО</p>
                    </div>
                </div>
                {% for courier in couriers %}
                <form id="EditFood">
                    <div class="foodList">
                        <div class="foodListContainer">
                            <p>{{ courier.id }}</p>
                        </div>
                        <div class="foodListContainer">
                            <p>{{ courier.login }}</p>
                        </div>
                        <div class="foodListContainer">
                            <p>{{ courier.password }}</p>
                        </div>
                        <div class="foodListContainer">
                            <p>{{ courier.name }}</p>
                        </div>

                        <div class="couriersButton">
                            <a href="/editCourierList?id={{ courier.id }}">Редактировать курьера</a>
                            <a href="/removeCourierList?id={{ courier.id }}">Удалить</a>
                        </div>
                    </div>
                    {% endfor %}
                </form>
            </div>
            <div class="col-lg-12 addCourier">
                <div class="addCourierButton couriersButton">
                    <a href="#" class="JsModalAddCourier fancybox-inline">Добавить курьера</a>
                    <div id="filterAddCourier"></div>
                    <div id="modalFormAddCourier">
                        <form id="AddCourier" action="/addCourier">
                            <div class="courierListEdit">
                                <input name="login" type="text" placeholder="Логин">
                                <input name="password" type="password" placeholder="Пароль">
                                <input name="name" type="text" placeholder="ФИО">
                                <input name="submit" type="submit" value="Добавить курьера">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="https://code.jquery.com/jquery-2.2.0.min.js" type="text/javascript"></script>
<script src="base/js/script.js" type="text/javascript"></script>
</body>
</html>
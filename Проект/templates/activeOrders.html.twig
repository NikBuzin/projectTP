<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Грузинская кухня</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="base/css/style.css">
    <link rel="stylesheet" href="plugins/css/bootstrap.css">
    <link rel="stylesheet" href="plugins/css/bootstrap.min.css">
    <link rel="stylesheet" href="plugins/css/bootstrap-grid.css">
    <link rel="stylesheet" href="plugins/css/bootstrap-grid.min.css">
    <link rel="stylesheet" href="plugins/css/bootstrap-reboot.css">
    <link rel="stylesheet" href="plugins/css/bootstrap-reboot.min.css">
</head>
<body>
<header id="Cap">
    <div class="container-fluid cap">
        <div class="row">
            <div class="col-lg-12 menu">
                <div class="menu_list">
                    <ul class="menu_list-ul" >
                        <li class="accountInfo">
                        </li>
                        <li>
                            <div class="main-logo" style="margin-left:-120px;">
                                <a href="\">
                                    <img src="base/img/satsivi-iz-kuritsy-gruzinskaya-kuhnya.png" alt="">
                                </a>
                            </div>
                        </li>
                        <li>
                            <ul class="menu-last">
                                <li class="exitButton">
                                    <a href="authorization">Выход</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</header>
<section id="ActiveOrders">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="activeOrders">
                    <div>
                        <p>№</p>
                    </div>
                    <div>
                        <p>Доступные заказы</p>
                    </div>
                    <div>
                        <p>Статус</p>
                    </div>
                    <div>
                        <p>Курьер</p>
                    </div>
                </div>
                {% for order in orders %}
                    {% if order.status!='Finish' %}
                    <div class="activeOrdersChild">
                    <div>
                        <p>{{ order.id}}</p>
                    </div>
                    <div>
                        <p>{{ order.description }}</p>
                    </div>
                    <div>
                        <p>{{ order.adress }}</p>
                    </div>
                    <div>
                        <p>{{ order.status }}</p>
                    </div>
                    <form name="OrderToCourier" action="/orderToCourier">
                    <div class="courierMenuChildSelect">
                        {% for courier in couriers %}
                        <p>
                            {{ courier.name }}
                        </p>
                            <p>
                                <input value="{{ order.id }}" name="order_id" type="hidden">
                                <input type="submit" value="Назначить на заказ">
                                <input value="{{ courier.id }}" name="courier_id" type="hidden">
                            </p>
                        {% endfor %}
                    </div>
                    </form>
                </div>
                    {% endif %}
                {% endfor %}

            </div>
        </div>
    </div>
</section>
</body>
</html>